<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SimpleSuite">
    <parameter name="author" value="Akshay"/>
    <test name="GoogleTitleTest">
        <parameter name="browserName" value="edge"/>
        <classes>
            <class name="org.akshay.FirstTest">
                <methods>
                    <include name="googleTitle"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="FaceBookLoginTest">
        <parameter name="browserName" value="chrome"/>
        <classes>
            <class name="org.akshay.FirstTest">
                <methods>
                    <include name="facebookLogin"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="AmazonShoppingTest">
        <parameter name="browserName" value="firefox"/>
        <classes>
            <class name="org.akshay.AmazonShoppingTest">
                <methods>
                    <include name="testShoppingWorkflow"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>